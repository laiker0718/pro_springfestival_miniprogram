/**result.wxss**/
.result-video-fullscreen {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}
.result-video {
  position: absolute;
  top: 43%;
  left: 50%;
  transform: translate(-50%, -43%);
  z-index: 1;
}
.result-video-cover {
  position: fixed;
  width: 80%;
  height: 35%;
  left: 10%;
  top: 30%;
}
.page-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
  text-align: center;
  z-index: 999;
}
.result-content {
  width: 80%;
  /* height: 40%; */
  /* height: 38%; */
  /* margin-top: 30%; */
  opacity: 0;
}
.result-tip-text {
  color: white;
  font-size: 40rpx;
  /* margin-top: 50%; */
  /* margin-top: 40%; */
}
.result-op-content {
  display: flex;
  flex-direction: row;
  width: 40%;
  /* margin-top: 5%; */
  justify-content: space-between;
}
.op-item {
  display: flex;
  flex-direction: column;
  color: #e4b967;
  font-size: 24rpx;
  width: 46%;
}
.op-item image {
  width:  100%;
}
.op-ec-btn {
  width: 50%;
  height: 106rpx;
  /* margin-top: 5%; */
  /* margin-top: 2%; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.ec-text {
  color: white;
  text-shadow: 3px 3px 5px #000;
  font-size: 26rpx;
}
.result-logo {
  position: absolute;
  top: 90%;
  width: 20%;
  left: 50%;
  transform: translateX(-50%);
}
.download-tip {
  /* width: 200rpx; */
  height: 30rpx;
  color: #fff;
  font-size: 30rpx;
  position: absolute;
  top: 88%;
  left: 50%;
  transform: translateX(-50%);
  line-height: 30rpx;
  text-align: center;
  z-index: 100;
}