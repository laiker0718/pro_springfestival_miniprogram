/**download.wxss**/
.page-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.op-content {
  display: flex;
  flex-direction: row;
  width: 60%;
  margin-top: 18%;
  justify-content: space-between;
}
.op-item {
  display: flex;
  flex-direction: column;
  color: #e4b967;
  font-size: 32rpx;
  width: 40%;
}
.op-item image {
  width:  100%;
}
.op-ec-btn {
  /* width: 80%; */
  width: 70%;
  /* height: 282rpx; */
  height: 246rpx;
  margin-top: 15%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.ec-text {
  color: white;
  text-shadow: 3px 3px 5px #000;
  font-size: 32rpx;
}
.download-tip {
  /* width: 200rpx; */
  height: 30rpx;
  color: #fff;
  font-size: 30rpx;
  display: flex;
  position: absolute;
  top: 86%;
  left: 50%;
  transform: translateX(-50%);
  line-height: 30rpx;
  text-align: center;
  z-index: 100;
}
.logo {
  position: absolute;
  top: 89%;
  width: 20%;
  left: 50%;
  transform: translateX(-50%);
}