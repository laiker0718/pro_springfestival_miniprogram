/**create.wxss**/
.page-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.create-tip-img {
  width: 60%;
  animation: rotate 4s linear infinite;
  -webkit-animation: rotate 4s linear infinite;
}
.create-tip-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  /* transform: translateY(-50%); */

  font-size: 44rpx;
  color: white;
}
.create-logo {
  position: absolute;
  top: 93%;
  width: 20%;
  left: 50%;
  transform: translateX(-50%);
}
.toast-image {
  position: absolute;
  width: 50%;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.toast-content {
  color: white;
  font-size: 32rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  text-align: center;
}
@keyframes rotate {
  from {
    transform:rotate(0);
  }
  to {
    transform:rotate(360deg)
  }
}
@-webkit-keyframes rotate {
  from {
    transform:rotate(0);
  }
  to {
    transform:rotate(360deg)
  }
}